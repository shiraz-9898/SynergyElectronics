@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>

    body {
        background-image: linear-gradient(to right, rgba(132, 250, 176, 0.5), rgba(143, 211, 244, 0.5)), url(https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp);
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        background-attachment: fixed;
    }

    .regBlock {
        margin-top: 4%;
        height: 80vh;
    }

        .regBlock .myColor {
            background-image: linear-gradient(to right, rgba(132, 250, 176, 1), rgba(143, 211, 244, 1));
        }

    .error {
        color: red;
    }

    .c1 {
        border: 2px solid red;
    }

</style>

<div class="container regBlock">

    @{
        if (TempData["response"] != null)
        {
            <div class="alert alert-danger alert-dismissible show w-75 mx-auto" role="alert">
                <strong>Invalid</strong> @TempData["response"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    }

    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card" style="border-radius: 15px;">
                <div class="card-body p-5">
                    <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-outline mb-4"> 
                            <label asp-for="Input.FullName" class="control-label">Full Name</label>
                            <input asp-for="Input.FullName" class="form-control" autocomplete="FullName" aria-required="true" placeholder="eg. 'John Smith'" />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="Input.PhoneNumber" class="control-label">Phone Number</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="PhoneNumber" aria-required="true" placeholder="000-000-0000" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="Input.Email" class="control-label">Email</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="form-outline mb-4">
                            <label asp-for="Input.Password" class="control-label">Password</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="Input.ConfirmPassword" class="control-label">Confirm Password</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>



                        <div class="d-flex justify-content-center">
                            <button id="registerSubmit" value="Register" type="submit"
                                    class="btn btn-success btn-block btn-lg text-body myColor">
                                Register
                            </button>
                        </div>

                        <p class="text-center text-muted mt-5 mb-0">Have already an account? <a asp-area="Identity" asp-page="/Account/Login" class="fw-bold text-body"><u>Login here</u></a></p>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
