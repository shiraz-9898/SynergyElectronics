@model SynergyElectronics.Areas.Identity.Data.Order

<style>
    #checkoutHeading {
        margin: auto;
        margin-top: 50px;
        text-align: center;
    }

        #checkoutHeading h1 {
            color: mediumpurple;
            font-weight: 600;
        }

    #mainBody {
        margin: 50px 0 100px 0;
    }
</style>

<div class="w-75 mx-auto" id="mainBody">
    <div class="w-75" id="checkoutHeading">
        <h1>Checkout Form</h1>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <span class="badge badge-secondary badge-pill" id="cartCount">1</span>
            </h4>
            <ul class="list-group mb-3" id="cartList">
                @if (Model.Prod_Id > 0)
                {
                    <li class="list-group-item d-flex justify-content-around lh-condensed">
                        <div class="col-md-6">
                            <h6 class="my-0">@Model.Products.Prod_Name</h6>
                            <small class="text-muted">Brief description</small>
                        </div>
                        <p class="text-muted col-md-2">@Model.Qty</p>
                        <span class="text-muted col-md-2" id="singlePrice">Rs.@Model.Products.Prod_Price</span>
                    </li>
                }


                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (INR)</span>
                    <strong id="totalPrice">Rs.0</strong>
                </li>
            </ul>

        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Billing address</h4>
            <form asp-action="PaymentPage" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Users.FullName" class="form-label"></label>
                        <input asp-for="Users.FullName" class="form-control" disabled />
                    </div>

                </div>

                <div class="mb-3">
                    <label asp-for="Users.UserName" class="form-label"></label>
                    <input asp-for="Users.UserName" class="form-control" disabled>

                </div>

                <div class="mb-3">
                    <label asp-for="Users.Email" class="form-label"></label>
                    <input asp-for="Users.Email" class="form-control" readonly>
                </div>

                <div class="mb-3">
                    <label asp-for="Users.Address" class="form-label"></label>
                    <input asp-for="Users.Address" class="form-control" />
                    <span asp-validation-for="Users.Address" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-5 mb-3">
                        <label asp-for="Users.Country" class="form-label"></label>
                        <select class="form-control">
                            <option value="">Choose...</option>
                            <option value="india">India</option>
                        </select>
                        <span asp-validation-for="Users.Country" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Users.State" class="form-label"></label>
                        <select class="form-control">
                            <option value="">Choose...</option>
                            <option value="m.p">M.P</option>
                            <option value="u.p">U.P</option>
                            <option value="maharashtra">Maharashtra</option>
                            <option value="delhi">Delhi</option>
                        </select>
                        <span asp-validation-for="Users.State" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Users.PinCode" class="form-label"></label>
                        <input asp-for="Users.PinCode" class="form-control" placeholder="">
                        <span asp-validation-for="Users.PinCode" class="text-danger"></span>
                    </div>
                </div>
                <hr class="mb-4">

                <h4 class="mb-3">Payment</h4>

                <div class="d-block my-3">
                    <div class="custom-control custom-radio">
                        <input asp-for="Payment" type="radio" value="Credit card" class="custom-control-input" checked required>
                        <label class="custom-control-label" asp-for="Payment">Credit card</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input asp-for="Payment" type="radio" value="Debit card" class="custom-control-input" required>
                        <label class="custom-control-label" asp-for="Payment">Debit card</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input asp-for="Payment" type="radio" value="Paypal" class="custom-control-input" required>
                        <label class="custom-control-label" asp-for="Payment">Paypal</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name_On_Card">Name on card</label>
                        <input asp-for="Name_On_Card" class="form-control" placeholder="" />
                        <small class="text-muted">Full name as displayed on card</small>
                        <span asp-validation-for="Name_On_Card" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Card_Num">Credit card number</label>
                        <input asp-for="Card_Num" class="form-control" placeholder="xxxx-xxxx-xxxx" />
                        <span asp-validation-for="Card_Num" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label asp-for="Expiry">Expiration</label>
                        <input asp-for="Expiry" class="form-control" placeholder="mm/yyyy" >
                        <span asp-validation-for="Expiry" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="CVV">CVV</label>
                        <input asp-for="CVV" class="form-control" placeholder="" />
                        <span asp-validation-for="CVV" class="text-danger"></span>
                    </div>
                </div>
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button>
            </form>
        </div>
    </div>

</div>

<script>
    $(document).ready(function () {
        var ul = $("#cartList");
        var cartCount = $("#cartCount");

        if (ul.children().length == 1) {
            $.ajax({
                type: "Get",
                url: "/OnlineShop/GetCartData/",
                success: function (data) {
                    var totalPrice = 0;
                    data.forEach(function (item) {
                        ul.prepend(`
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div class="col-md-8">
                                    <h6 class="my-0">${item.products.prod_Name}</h6>
                                    <small class="text-muted">Brief description</small>
                                </div>
                                <p class="text-muted text-end col-md-1">${item.cart_Qty}</p>
                                <span class="text-muted text-end col-md-3 price">Rs.${item.products.prod_Price}</span>
                            </li>
                        `);

                        totalPrice += item.cart_Price;
                    });
                    cartCount.text(data.length);
                    $("#totalPrice").text(`Rs.${totalPrice}`);
                },

            });

        }
        else {
            var price = $("#singlePrice").text();
            $("#totalPrice").text(price);
        }

    })
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}